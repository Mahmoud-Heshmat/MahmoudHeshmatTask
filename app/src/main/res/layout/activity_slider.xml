<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_slider"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mahmoudheshmat.mahmoudheshmattask.sliderActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
   />

    <TextView
        android:id="@+id/textForWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/indicators"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/firstImage"
        android:textColor="@color/white"
        android:background="@color/MAASTRICHT"
      />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicators"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:padding="10dip"
        app:centered="true"
        app:fillColor="@color/black"
        app:pageColor="@color/SteelBlue"
        app:snap="false" />

</RelativeLayout>
